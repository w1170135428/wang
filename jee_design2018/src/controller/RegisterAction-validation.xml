<?xml version="1.0" encoding="UTF-8"?>

	<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
	
	<validators>
	
  <field name="user.username">
  	<field-validator type="requiredstring">
  	<param name="username"></param>
  	<message>用户名为空</message>
  	</field-validator>
  	</field>
  	
  	<field name="user.password">
  	<field-validator type="requiredstring">
  	<param name="pass"></param>
  	<message>密码为空</message>
  	</field-validator>
  	</field>
  	
  	<field name="user.userID">
  	<field-validator type="requiredstring">
  	<param name="userID"></param>
  	<message>身份证号码为空</message>
  	</field-validator>
  	</field>
  	
  	<field name="user.usertelephone">
  	<field-validator type="requiredstring">
  	<param name="userTelephone"></param>
  	<message>手机号码为空</message>
  	</field-validator>
  	</field>
  	
  	<field name="user.userid">
  	<field-validator type="stringlength">
  	<param name="maxLength">18</param>
  	<param name="minLength">18</param>
  	<message>身份证号码应为18位</message>
  	</field-validator>
  	</field>
	
	<field name="user.usertelephone">
  	<field-validator type="stringlength">
  	<param name="maxLength">11</param>
  	<param name="minLength">11</param>
  	<message>手机号码应为11位</message>
  	</field-validator>
  	</field>
	
  </validators>


